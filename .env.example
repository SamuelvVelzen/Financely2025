# Database
DATABASE_URL="file:./prisma/data/dev.db"

# BetterAuth Configuration
# Generate a secure secret key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# Feature Flags - Enable/disable authentication methods
ENABLE_EMAIL_PASSWORD=true
ENABLE_MAGIC_LINK=true
REQUIRE_EMAIL_VERIFICATION=false

# Social OAuth Providers
# Set ENABLE_* to "true" to enable each provider

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
ENABLE_GOOGLE=false
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft OAuth
# Get credentials from: https://portal.azure.com/
ENABLE_MICROSOFT=false
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""

# Apple OAuth
# Get credentials from: https://developer.apple.com/
ENABLE_APPLE=false
APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""
APPLE_TEAM_ID=""
APPLE_KEY_ID=""

# Client-side feature flags (for Vite)
# These are exposed to the client and control which auth methods are shown in the UI
VITE_ENABLE_EMAIL_PASSWORD=true
VITE_ENABLE_MAGIC_LINK=true
VITE_ENABLE_GOOGLE=false
VITE_ENABLE_MICROSOFT=false
VITE_ENABLE_APPLE=false
